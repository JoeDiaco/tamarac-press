---
layout: "base.njk"
---
<!-- Masthead-->
<header class="masthead">
    <div class="container px-4 px-lg-5 h-100">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h1 class="text-white font-weight-bold">{{ site.slogan }}</h1>
                <hr class="divider" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 mb-5">{{ site.description }}</p>
                <a class="btn btn-primary btn-xl" href="#services">Find Out More</a>
            </div>
        </div>
    </div>
</header>
<!-- Services-->
<section class="page-section" id="services">
    {% for category in services %}
    {% set numservices = category.services.length %}
    {% set islast = loop.index === numservices %}
    <div class="container px-4 px-lg-5{% if islast %} pt-5{% endif %}">
        <h2 class="text-center mt-0">{{ category.categoryname }} Services</h2>
        <hr class="divider" />
        
        <div class="row gx-4 gx-lg-5">

            {% for service in category.services %}
            <div class="col-lg-{{ 12 / numservices }} col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-{{ service.icon }} fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">{{ service.name }}</h3>
                    <p class="text-muted mb-0">{{ service.description }}</p>
                </div>
            </div>
            {% endfor %}

        </div>
    </div>
   {% endfor %}
</section>
<!-- About-->
<section class="page-section bg-primary" id="about">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="text-white mt-0">About Pat Goudey O'Brien</h2>
                <hr class="divider divider-light" />
                <p class="text-white-75 mb-4">{{ site.about }}</p>
                <a class="btn btn-light btn-xl" href="#services">What I Do</a>
            </div>
        </div>
    </div>
</section>
<!-- our-books-->
<div id="our-books">
    <div class="container-fluid p-0">
        <hr class="divider" />
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class=" mt-0">Our Books</h2>
            </div>
        </div>
        <hr class="divider" />
        <div class="row g-0">
            {% for book in books %}
            <div class="col-lg-4 col-sm-6">
                <a class="our-books-box" href="/assets/images/img/our-books/{{ book.coverFilename }}"
                    title="{{ book.title }} ">
                    <img class="img-fluid" src="/assets/images/img/our-books/{{ book.coverFilename }}"
                        alt="{{ book.title }} by {{ book.author }}" />
                    <div class="our-books-box-caption">
                        <div class="project-name text-white-50">{{ book.title }}</div>
                        <div class="project-category">{{ book.author }}</div>&nbsp
                    </div>
                </a>
                <div class="our-books-data">
                    <div class="project-name text-white-50">{{ book.title }}</div>
                    <div class="project-category">{{ book.author }}</div>&nbsp
                    <div>ISBN: {{ book.ISBN }}</div>&nbsp
                    <div>{{ book.contentBlurb }}</div>&nbsp
                    {% if book.merchantLinks %}
                    {% for merchant in book.merchantLinks %}
                    <div><a href="{{ merchant.link }}" class="merchant-links">Buy it on {{ merchant.name }}</a></div>
                    {% endfor %}
                    {% else %}
                    <div>{{ book.purchaseNotes | safe }}</div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
